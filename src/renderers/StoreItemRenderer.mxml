<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	<fx:Script>
		<![CDATA[
			import classes.StoreItem;
			override public function set data(value:Object):void
			{
				if (value && value is StoreItem)
				{
					
				}
			}
		]]>
	</fx:Script>
	<s:states>
		<s:State name="default" />
		<s:State name="downloading" />
		<s:State name="downloaded" />
	</s:states>
	
	<s:layout>
		<s:HorizontalLayout gap="0"/>
	</s:layout>
	<fx:Binding source="downloadItem.percentage" destination="rcDownloading.percentWidth"/>
	
	<s:Image id="icon" source="@Embed(source='assets/icon-placeholder.png')" width="75" height="75" scaleMode="stretch"/>
	
	<s:Spacer width="15"/>
	
	<s:VGroup width="100%" height="100%">
		<s:Label text="{storeItem.name}" fontSize="15" color="#666666"/>
		<s:Label text="分类：{storeItem.category}"/>
		<s:Spacer height="100%"/>
		<components:KPButton id="btnBuy" text="限时免费" width="80" height="22" click="btnBuy_clickHandler(event)" includeIn="default"/>
		<s:HGroup width="100%" height="22" gap="3" includeIn="downloading" verticalAlign="bottom">
			<s:Group width="100%" height="14" verticalCenter="-2">
				<s:Rect left="0" top="0" right="0" bottom="0" radiusX="6">
					<s:fill>
						<s:SolidColor color="#666666"/>
					</s:fill>
				</s:Rect>
				<s:Group left="2" top="2" right="2" bottom="2">
					<s:Rect id="rcDownloading" width="0%" height="100%" radiusX="6">
						<s:fill>
							<s:SolidColor color="#fb8941"/>
						</s:fill>
					</s:Rect>
				</s:Group>
			</s:Group>
			<s:Image id="btnCancel" source="@Embed(source='assets/icon-cancel.png')"
					 width="22" height="22" includeIn="downloading" verticalCenter="2"
					 click="btnCancel_clickHandler(event)"/>
		</s:HGroup>
		<s:Label color="#CCCCCC" text="已下载" height="16" verticalAlign="middle" includeIn="downloaded"/>
	</s:VGroup>
	
</s:ItemRenderer>