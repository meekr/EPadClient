<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true"
				width="100%">
	<s:states>
		<s:State name="default"/>
	</s:states>
	<s:layout>
		<s:HorizontalLayout verticalAlign="middle" paddingTop="5" paddingBottom="5"/>
	</s:layout>
	
	<mx:Image id="thumbnail" source="data.fileUrl" width="132" height="75"/>
	<s:Spacer width="0"/>
	<s:VGroup width="100%" height="100%" verticalAlign="top" paddingTop="8" gap="10">
		<s:Label text="{data.name}" color="#333333" fontSize="14"/>
		<s:Label text="文件大小：{data.fileSize}"/>
	</s:VGroup>
	<s:CheckBox skinClass="skins.MyCheckBox" selected="{data.selected}"/>
	<s:Spacer width="5"/>
</s:ItemRenderer>